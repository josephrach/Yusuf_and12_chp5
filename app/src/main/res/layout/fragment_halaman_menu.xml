<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_menu_pilihlawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/patrick_hand_regular"
            android:text="PILIH LAWANMU"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_menu_vspemain"
            android:layout_width="228dp"
            android:layout_height="206dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/landing_page1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_menu_pilihlawan" />

        <TextView
            android:id="@+id/txt_menu_vspemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/patrick_hand_regular"
            android:text="... vs pemain"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_menu_vspemain" />

        <ImageView
            android:id="@+id/img_menu_vscom"
            android:layout_width="228dp"
            android:layout_height="202dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/landing_page2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_menu_vspemain" />

        <TextView
            android:id="@+id/txt_menu_vscom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/patrick_hand_regular"
            android:text="... vs komputer"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_menu_vscom"
            app:layout_constraintVertical_bias="0.139" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>